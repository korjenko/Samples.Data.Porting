<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040" >

    <com.samsung.android.sdk.professionalaudio.widgets.FloatingController
        xmlns:control="http://schemas.android.com/apk/res-auto"
        android:id="@+id/jam_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:soundEffectsEnabled="false" />

    <TextView
        android:id="@+id/current_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/vDownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/volumeDown"
            android:src="@drawable/btn_volume_down" />

        <ImageButton
            android:id="@+id/vUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/volumeUp"
            android:src="@drawable/btn_volume_up" />
    </LinearLayout>

</RelativeLayout>