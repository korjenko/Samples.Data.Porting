<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_user_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_activity"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/text_user_activity_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:minLines="5" />

            <ToggleButton
                android:id="@+id/btn_user_activity_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/value"
                android:textOff="value"
                android:textOn="stop" />

            <TextView
                android:id="@+id/text_user_activity_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_pedometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pedometer"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/text_pedometer_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:minLines="5" />

            <ToggleButton
                android:id="@+id/btn_pedometer_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/value"
                android:textOff="value"
                android:textOn="stop" />

            <TextView
                android:id="@+id/text_pedometer_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_wearing_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wearing_state"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/text_wearing_state_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:minLines="5" />

            <Button
                android:id="@+id/btn_wearing_state_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:text="@string/value" />

            <TextView
                android:id="@+id/text_wearing_state_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>